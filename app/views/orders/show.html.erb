<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Email Used: <%= @order.email %></p>
    <!-- Display Line Items -->
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= image_tag line_item.product.image.url, class: 'img-thumbnail' %></td>
            <td><%= line_item.product.name %></td>
            <td><%= line_item.product.description %></td>
            <td><%= line_item.quantity %></td>
            <td><%= number_to_currency(line_item.total_price, precision:2) %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4" class="text-right">Total Amount:</td>
          <td><%= humanized_money_with_symbol @order.total %></td>
        </tr>
      </tfoot>
    </table>

   
  
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
